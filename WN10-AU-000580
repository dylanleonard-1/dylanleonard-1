# YOUR CODE GOES HERE
# Define the audit subcategory and desired audit setting
$Subcategory = "MPSSVC Rule-Level Policy Change"
$AuditSetting = "Failure"

# Apply the audit policy setting using AuditPol
$auditResult = AuditPol /set /subcategory:"$Subcategory" /failure:enable

# Check if the command was successful
if ($LASTEXITCODE -eq 0) {
    Write-Host "Policy 'Audit MPSSVC Rule-Level Policy Change' has been configured to log failures successfully."
} else {
    Write-Host "Failed to configure 'Audit MPSSVC Rule-Level Policy Change' policy. Error code: $LASTEXITCODE"
}
 
